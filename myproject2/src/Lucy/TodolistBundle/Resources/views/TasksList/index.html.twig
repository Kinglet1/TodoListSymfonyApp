{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Мои списки дел</h1>

    <div class="content-row">
        <a href="{{ path('taskslist_new') }}" class="btn btn-success">
            Новый список
        </a>
        <a href="{{ path('task_new') }}" class="btn btn-success">
            Новая задача
        </a>
        <a href="{{ path('task') }}">Смотреть все задачи</a>
    </div>

    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Название</th>
                <th>Всего дел</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.tasks|length }}</td>
                <td>
                    <a href="{{ path('taskslist_show', { 'id': entity.id }) }}" class="btn btn-info">Смотреть</a>
                    <a href="{{ path('taskslist_edit', { 'id': entity.id }) }}" class="btn btn-primary">Редактировать</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
