{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Все дела</h1>

    <a href="{{ path('task_new') }}" class="btn btn-success">
        Новое дело
    </a>

    <table class="records_list records_list table table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Описание</th>
                <th>Дедлайн</th>
                <th>Приоритет</th>
                <th>Категория</th>
                <th>Сделано</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.deadline %}{{ entity.deadline|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.priority }}</td>
                <td>
                    <a href="{{ path('taskslist_show', { 'id': entity.taskList.id }) }}">{{ entity.taskList }}</a>
                </td>
                <td>{{ entity.done }}</td>
                <td>
                    <a href="{{ path('task_show', { 'id': entity.id }) }}" class="btn btn-info">Смотреть</a>
                    <a href="{{ path('task_edit', { 'id': entity.id }) }}" class="btn btn-primary">Редактировать</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
