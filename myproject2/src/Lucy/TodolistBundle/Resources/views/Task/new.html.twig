{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Новая задача</h1>

    <div class="content-row">
        {{ form_start(form, {'attr': {'class': 'task-form'}}) }}

            <div class="form-group row">
                <label class="col-sm-2 form-control-label">
                    {{ form_label(form.title, 'Название', {}) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 form-control-label">
                    {{ form_label(form.description, 'Описание', {}) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 form-control-label">
                    {{ form_label(form.deadline, 'Дедлайн', {}) }}
                </label>
                <div class="col-sm-10 form-inline">
                    {{ form_widget(form.deadline.year, {'attr': {'class': 'form-control'}}) }}
                    {{ form_widget(form.deadline.month, {'attr': {'class': 'form-control'}}) }}
                    {{ form_widget(form.deadline.day, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 form-control-label">
                    {{ form_label(form.priority, 'Приоритет', {}) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.priority, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 form-control-label">
                    {{ form_label(form.done, 'Сделано', {}) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.done, {'attr': {'class': ''}}) }}
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 form-control-label">
                    {{ form_label(form.taskList, 'Привязать к списку', {}) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.taskList, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-info'}}) }}
        {{ form_end(form) }}
    </div>

    <a href="{{ path('task') }}">
        Назад
    </a>
{% endblock %}
