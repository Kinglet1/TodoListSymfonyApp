<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite'
                '%kernel.root_dir%/../node_modules/bootstrap/dist/css/bootstrap.css'
                '%kernel.root_dir%/../node_modules/bootstrap/dist/css/bootstrap-theme.css'
                '@LucyTodolistBundle/Resources/public/css/custom.min.css'
            %}
            <link rel="stylesheet" href="{{ asset_url }}">
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <span class="navbar-brand">Project logo here</span>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="#">О проекте</a>
                            </li>
                            <li>
                                <a href="#">Контакты</a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#">Ваш кабинет</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block footer %}
            <footer class="footer" id="footer">
                <div class="container">
                    <div class="row">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="#">О проекте</a>
                            </li>
                            <li>
                                <a href="#">Контакты</a>
                            </li>
                            <li>
                                <a href="#">Блог</a>
                            </li>
                        </ul>
                    </div>
                    <div class="row">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="#">&copy; Company name</a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#">Moscow, 2015-2016</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}
            {% javascripts
                '%kernel.root_dir%/../node_modules/jquery/dist/jquery.js'
                '%kernel.root_dir%/../node_modules/bootstrap/dist/js/bootstrap.js'
            %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>